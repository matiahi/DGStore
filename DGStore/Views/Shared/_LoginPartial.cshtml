@using Microsoft.AspNetCore.Identity
@using DGStore.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav ">
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">خروج</button>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                    <i class="fa fa-info-circle align-middle"></i>
                    خوش آمدید @UserManager.GetUserName(User)!
                </a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Login">
                <i class="fas fa-sign-in-alt align-middle"></i>
                ورود
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Register">
                <i class="fas fa-user-plus align-middle"></i>
                ثبت نام
            </a>
        </li>
    </ul>
}
