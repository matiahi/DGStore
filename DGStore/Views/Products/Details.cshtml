@model DGStore.Models.Product

@{
    ViewData["Title"] = "نمایش جزییات محصول";
}

<h2 class="text-right">@ViewData["Title"] </h2>
<hr />
<table class="table">
    <tbody>
        <tr>
            <td>
                <label asp-for="Title" class="control-label">عنوان محصول:</label>
            </td>
            <td>@Html.DisplayFor(model => model.Title)</td>
        </tr>
        <tr>
            <td>
                <label asp-for="IsExists" class="control-label">کالا موجود است :</label>
            </td>
            <td>
                @if (Model.IsExists)
                {
                    <text>بلی</text>
                }
                else
                {
                    <text>خیر</text>
                }
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="NumberInStock" class="control-label">تعداد موجودی:</label>
            </td>
            <td>@Html.DisplayFor(model => model.NumberInStock)</td>
        </tr>
        <tr>
            <td> <label asp-for="Price" class="control-label">قیمت:</label> </td>

            <td>@Html.DisplayFor(model => model.Price) </td>
        </tr>
        <tr>
            <td><label asp-for="Specification" class="control-label">توضیحات:</label></td>
            <td> @Html.DisplayFor(model => model.Specification)</td>
        </tr>
    </tbody>
</table>

<div>
    <button type="submit" class="btn btn-warning">
        <i class="fas fa-edit align-middle"></i>
        ویرایش محصول
    </button>
    <a asp-action="Index" class="btn btn-primary"> 
    <i class="fas fa-share align-middle"></i>
    بازگشت به لیست</a>
</div>
