@model DGStore.Models.Product

@{
    ViewData["Title"] = "ویرایش محصول";
}

<h2 class="text-right">@ViewData["Title"] </h2>

<hr />
<div class="row">
	<div class="col-md-8"></div>
	<div class="col-md-4">
		<form asp-action="Edit" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Title" class="control-label">عنوان محصول:</label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="NumberInStock" class="control-label">تعداد موجودی:</label>
				<input asp-for="NumberInStock" class="form-control" />
				<span asp-validation-for="NumberInStock" class="text-danger"></span>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						کالا موجود است :
					</label>
					<input asp-for="IsExists" value="True" /> @*@Html.DisplayNameFor(model => model.IsExists)*@
				</div>
			</div>
			<div class="form-group">
				<label for="image" class="control-label">عکس :</label>
				<input type="file" name="image" id="image" class="form-control-file" />
				@*	<span asp-validation-for="image" class="text-danger"></span>*@
			</div>
			<div class="form-group">
				<img src="@Model.ImagePath" title="سایت دیجی استور - @Model.Title" alt="سایت دیجی استور - @Model.Title" width="100px" />
				<label asp-for="Price" class="control-label">قیمت:</label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Specification" class="control-label">توضیحات:</label>
				<textarea asp-for="Specification" class="form-control"></textarea>
				<span asp-validation-for="Specification" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="ImagePath" type="hidden" />
				<button type="submit" class="btn btn-warning">
					<i class="fas fa-edit align-middle"></i>
					ویرایش محصول
				</button>
				<a asp-action="Index" class="btn btn-primary">
					<i class="fas fa-share align-middle"></i>
					بازگشت به لیست
				</a>
			</div>
		</form>
	</div>
</div>



